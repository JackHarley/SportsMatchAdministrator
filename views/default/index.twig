{% extends "base.twig" %}

{% block pageTitle %}Home{% endblock %}

{% block body %}
<div class="container">
	<div class="row">
		<div class="col-lg-12">
			<ol class="breadcrumb">
				<li class="active">Home</li>
			</ol>

			<h2><span class="glyphicon glyphicon-home"></span> Home</h2>
		</div>
	</div>

	<div class="row">
		<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
			<div class="panel panel-primary">
				<div class="panel-heading"><span class="glyphicon glyphicon-eye-open"></span> Leagues</div>

				<div class="panel-body">
					<p>If you wish to view league information/fixtures/results/tables please select a league from the list below:</p>

					<ul>
						{% for league in leagues %}
							<li><a href="{{ base_links_url }}/league?id={{ league.id }}">{{ league.name }}</a></li>
						{% endfor %}
					</ul>
				</div>
			</div>

			{% if info %}
				<div class="panel panel-primary">
					<div class="panel-heading"><span class="glyphicon glyphicon-book"></span> Info</div>

					<div class="panel-body">
						{{ info|raw }}
					</div>
				</div>
			{% endif %}
		</div>

		<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
			<div class="panel panel-primary">
				<div class="panel-heading"><span class="glyphicon glyphicon-copyright-mark"></span> Coaches</div>

				<div class="panel-body">
					<a href="{{ base_links_url }}/match/submit" class="btn btn-default"><span class="fa fa-send"></span> Submit Match Result</a>
					<a href="{{ base_links_url }}/match/submitted" class="btn btn-default"><span class="fa fa-list"></span> View Submitted Match Results/Reports</a>
				</div>
			</div>

			<div class="panel panel-primary">
				<div class="panel-heading"><span class="glyphicon glyphicon-king"></span> Head Coaches</div>

				<div class="panel-body">
					<a href="{{ base_links_url }}/team/register" class="btn btn-default"><span class="fa fa-futbol-o"></span> Team Registration</a>
				</div>
			</div>

			<div class="panel panel-primary">
				<div class="panel-heading"><span class="glyphicon glyphicon-wrench"></span> Administrators</div>

				<div class="panel-body">
					<a href="{{ base_links_url }}/acp" class="btn btn-default"><span class="glyphicon glyphicon-dashboard"></span> View Admin Dashboard</a>
				</div>
			</div>

			{% if downloads %}
				<div class="panel panel-primary">
					<div class="panel-heading"><span class="glyphicon glyphicon-save"></span> Downloads</div>

					<div class="panel-body">
						{% for dl in downloads %}
							<a href="{{ base_links_url }}/download/trigger?id={{ dl.id }}" class="btn btn-default">{{ dl.title }}</a>
						{% endfor %}
					</div>
				</div>
			{% endif %}
		</div>
	</div>
</div>
{% endblock %}