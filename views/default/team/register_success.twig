{% extends "base.twig" %}

{% block pageTitle %}Team Registered{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<h2><span class="fa fa-futbol-o"></span> Team Registered!</h2>
			</div>
		</div>

		<p>
			Your team has been registered successfully, to register another team, click the button below.
		</p>

		<p>
			<a class="btn btn-block btn-info" href="{{ base_links_url }}/team/register"><span class="fa fa-plus"></span> Register Another Team</a>
		</p>

		<div class="clearfix" style="height: 10px;"></div>

		<div class="row">
			<div class="col-lg-6 col-md-7 col-sm-9 col-xs-12">
				<div class="panel panel-primary">
					<div class="panel-heading"><span class="fa fa-plus"></span> Team Details</div>

					<table class="table">
						<tr>
							<th>Identifier (1 = Firsts, 2 = Seconds, ...):</th>
							<td>{{ team.ordinal }}</td>
						</tr>

						<tr>
							<th>Organization:</th>
							<td>{{ team.organization.name }}</td>
						</tr>
					</table>
				</div>
			</div>

			<div class="col-lg-6 col-md-7 col-sm-9 col-xs-12">
				<div class="panel panel-primary">
					<div class="panel-heading"><span class="fa fa-list"></span> Players</div>

					<table class="table">
						{% for player in team.getPlayers() %}
							<tr><td>{{ player.fullName }}</td></tr>
						{% endfor %}
					</table>
				</div>
			</div>
		</div>
	</div>
{% endblock %}