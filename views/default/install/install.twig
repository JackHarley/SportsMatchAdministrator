{% extends "base.twig" %}

{% block pageTitle %}Install Database{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<h2><span class="glyphicon glyphicon-wrench"></span> Initial Setup</h2>

				<p>
					Welcome to Sports Match Administrator!
				</p>

				<p>
					Please fill out all of the required fields on this page and then click the Install button at the bottom to begin using the software.
				</p>
			</div>
		</div>

		<div class="clearfix" style="height: 15px"></div>

		<form action="" method="post">
			<div class="row">
				<div class="col-lg-6">
					<div class="panel panel-primary">
						<div class="panel-heading"><span class="glyphicon glyphicon-user"></span> First User</div>

						<div class="panel-body">
							<p>
								Enter the information for the first administrative user account that the system will create. You'll be able to add more later.
							</p>

							<div class="form-group">
								<label for="email">Email Address:</label>
								<input type="email" id="email" class="form-control" name="email" placeholder="address@example.com">
							</div>

							<div class="form-group">
								<label for="full-name">Full Name:</label>
								<input type="text" id="full-name" class="form-control" name="full-name" placeholder="John Doe">
							</div>

							<div class="form-group">
								<label for="password">Password:</label>
								<input type="password" id="password" class="form-control" name="password" placeholder="Password">
								<input type="password" id="confirm-password" class="form-control" name="confirm-password" placeholder="Confirm Password" style="margin-top: 4px;">
							</div>
						</div>
					</div>
				</div>

				<div class="col-lg-6">
					<div class="panel panel-primary">
						<div class="panel-heading"><span class="glyphicon glyphicon-check"></span> Server Checks</div>

						<div class="panel-body">
							Make sure all of the below are green before you continue or you may experience errors whilst using the software. You've been warned!
						</div>

						<table class="table" id="install-checks">
							{% for check in checks %}
								<tr>
									<th>{{ check.name }}</th>
									<td class="{% if check.status == constant("\\sma\\models\\ServerCheck::SUCCESS") %}success{% else %}failure{% endif %}">{{ check.message }}</td>
								</tr>
							{% endfor %}
						</table>
					</div>
				</div>
			</div>

			<div class="row">
				<div class="col-lg-12">
					<div class="panel panel-primary">
						<div class="panel-heading"><span class="glyphicon glyphicon-plane"></span> Let's go!</div>

						<div class="panel-body">
							<div class="form-group">
								<button type="submit" class="btn btn-block btn-success btn-lg"><span class="glyphicon glyphicon-hdd"></span> Install</button>
							</div>
						</div>
					</div>
				</div>
			</div>
		</form>
	</div>
{% endblock %}