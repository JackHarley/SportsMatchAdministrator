{% extends "base.twig" %}

{% block pageTitle %}Upgrade Database{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<h2><span class="glyphicon glyphicon-wrench"></span> Upgrade Database</h2>

				<p>
					Your database is out of date and must be upgraded.<br>
				</p>

				<p class="text-danger">
					<strong>Warning: Whilst data is not supposed be lost during this process, you should take a backup. If things break and you don't have a backup to restore to then you've got no one to blame other than yourself!</strong>
				</p>
			</div>
		</div>

		<div class="clearfix" style="height: 15px"></div>

		<form action="" method="post">
			<div class="row">
				<div class="col-lg-12">
					<div class="panel panel-primary">
						<div class="panel-heading"><span class="glyphicon glyphicon-plane"></span> Let's go!</div>

						<div class="panel-body">
							<div class="form-group">
								<button type="submit" name="submit" value="true" class="btn btn-block btn-success btn-lg"><span class="glyphicon glyphicon-hdd"></span> Upgrade</button>
							</div>
						</div>
					</div>
				</div>
			</div>
		</form>
	</div>
{% endblock %}