{% extends "acp/base.twig" %}

{% block page %}
	<!-- Content Header (Page header) -->
	<section class="content-header">
		<h1>Organizations</h1>
	</section>

	<!-- Main content -->
	<section class="content">
		<div class="row">

			<!-- one column -->
			<div class="col-sm-12 col-xs-12">
				<div class="box box-primary">
					<div class="box-header with-border">
						<h3 class="box-title"><i class="fa fa-pencil-square-o"></i> Update Organization</h3>
					</div><!-- /.box-header -->

					<!-- form start -->
					<form role="form" action="" method="post">
						<input type="hidden" name="id" value="{{ object.id }}">

						<div class="box-body">
							<div class="form-group">
								<label for="name">Name:</label>
								<input type="text" class="form-control" id="name" name="name" value="{{ object.name }}">
							</div>
						</div><!-- /.box-body -->

						<div class="box-footer">
							<button type="submit" class="btn btn-primary"><i class="fa fa-pencil-square-o"></i> Update</button>
						</div>
					</form>
				</div><!-- /.box -->
			</div><!-- /.col -->

		</div><!-- ./row -->
	</section><!-- /.content -->
{% endblock %}